{% extends "base.html.twig" %}

{% block content %}
<!-- Contenu spécifique de chaque page -->
<div class="pt-2">
    <div class="gap-2 p-2 grid grid-cols-12 items-center">
        
        {# Titre de la page #}
        <h1 class="col-span-12 text-white font-bold text-4xl text-center bg-[#A23145] rounded-2xl p-4 drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)] mb-10">
            Evénements du moment
        </h1>

        {# Contenu : Grille de 2 colonnes #}
        <div class="col-span-12">
            <div class="grid grid-cols-1 md:grid-cols-1 lg:grid-cols-2 gap-4">
                {% for event in events %}
                <div class="p-2 grid grid-cols-6 auto-cols-min items-center rounded-2xl bg-[#A23145] drop-shadow-[0_5px_5px_rgba(0,0,0,0.5)]">
                    {# Image de l'événement #}
                    <img src="../asset/evenement/{{ event.img }}" alt="Image de l'événement" loading="lazy" class="col-start-1 col-span-2 w-full rounded-lg">
                    
                    {# Infos de l'événement #}
                    <div class="grid grid-cols-subgrid col-start-3 col-span-2 flex-col w-[250px] text-white gap-2 p-4">
                        <h3 class="font-bold text-xl row-start-1 col-span-2 break-words">{{ event.titre }}</h3>
                        <p class="row-start-2 col-span-2 break-words">{{ event.date_evt }}</p>
                        <p class="row-start-3 col-span-2 break-words">{{ event.localisation | nl2br }}</p>
                    </div>
                    
                    {# Bouton pour accéder à la page de l'événement #}
                    <div class="col-start-5 col-span-2 flex flex-col items-center justify-center gap-10">
                        <button class="bg-white text-[#A23145] rounded-2xl p-2 font-bold" aria-label="typeEvennement">Type d'événement</button>
                        <a href="details.php?id={{ event.id }}" class="text-white text-md font-bold" aria-label="En savoir plus">EN SAVOIR PLUS</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
